{% extends 'base.html.twig' %}

{% block title %}CONNEXION
{% endblock %}

{% block body %}
	<div class="container w-25 shadow mx-auto p-5 mt-5">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					Vous Ãªtes connectez en tant que :
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">DECONNEXION</a>
				</div>
			{% endif %}

			<h1 class="text-warning mb-3 font-weight-normal">CONNEXION</h1>

			<div class="mt-5">
				<label for="username">Email</label>
				<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mt-2" autocomplete="email" required autofocus>
			</div>

			<div class="mt-5">
				<label for="password">Mot de passe</label>
				<input type="password" name="_password" id="password" class="form-control mt-2" autocomplete="current-password" required>
			</div>


			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
																																																										            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																										            See https://symfony.com/doc/current/security/remember_me.html
																																																										
																																																										            <div class="checkbox mb-3">
																																																										                <input type="checkbox" name="_remember_me" id="_remember_me">
																																																										                <label for="_remember_me">Remember me</label>
																																																										            </div>
																																																										        #}

			<button class="btn btn-info mt-5" type="submit">
				Connexion
			</button>
		</form>

	</div>
{% endblock %}
